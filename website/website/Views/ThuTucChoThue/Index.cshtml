@model website.Models.Document

@{
    ViewData["Title"] = "Document Viewer";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewData["Title"]</title>
</head>
<body>
    <h2>@ViewData["Title"]</h2>

    @if (Model != null)
    {
        <div>
            <h3>@Model.Title</h3>
            <p>@Model.Content</p>

            @if (ViewData["DocumentPath"] != null)
            {
                <iframe class="pdf-container" src="@ViewData["DocumentPath"]" width="100%" height="600px"></iframe>
            }
            else
            {
                <p>Chưa cập nhật hợp đồng thuê hoặc file không phải là PDF.</p>
            }
        </div>
    }
    else
    {
        <p>Chưa cập nhật hợp đồng thuê.</p>
    }
</body>
</html>
